<% if_p('remote_syslog.address', 'remote_syslog.port', 'remote_syslog.protocol') do |address, port, protocol| %>
files:
  - /var/vcap/sys/log/containers/*.log
  - /var/vcap/store/docker/docker/containers/*/*.log
destination:
  host: <%= address %>
  port: <%= port %>
  protocol: <%= protocol %>
<% end %>
