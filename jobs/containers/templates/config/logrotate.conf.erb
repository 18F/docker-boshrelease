/var/vcap/sys/log/containers/*.log {
  missingok
  rotate <%= p('docker.containers.logrotate.rotate') %>
  compress
  delaycompress
  notifempty
  copytruncate
  size <%= p('docker.containers.logrotate.size') %>
  su <%= p('docker.user') %> <%= p('docker.group') %>
}

/var/vcap/store/docker/docker/containers/*/*.log {
  missingok
  rotate <%= p('docker.containers.logrotate.rotate') %>
  compress
  delaycompress
  notifempty
  copytruncate
  size <%= p('docker.containers.logrotate.size') %>
  su <%= p('docker.user') %> <%= p('docker.group') %>
}
