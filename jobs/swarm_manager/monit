check process swarm_manager with pidfile /var/vcap/sys/run/swarm_manager/swarm_manager.pid
  group vcap
  start program "/var/vcap/packages/bosh-helpers/monit_debugger ctl '/var/vcap/jobs/swarm_manager/bin/ctl start'"
  stop program "/var/vcap/packages/bosh-helpers/monit_debugger ctl '/var/vcap/jobs/swarm_manager/bin/ctl stop'"
  if failed unixsocket /var/vcap/sys/run/swarm_manager/swarm_manager.sock with timeout 5 seconds for 5 cycles then restart
